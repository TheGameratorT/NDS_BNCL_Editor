<Window x:Class="NDS_BNCL_Editor.ErrorHandler"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NDS_BNCL_Editor"
        mc:Ignorable="d"
        Title="ErrorHandler" Height="250" Width="400" MinHeight="250" MinWidth="400">
    <Grid>
        <TextBox x:Name="ExceptionBox" IsReadOnly="True" IsReadOnlyCaretVisible="True" Margin="10,65,9.6,10" TextWrapping="Wrap"/>
        <Label x:Name="MessageLabel" Height="50" Margin="10,10,64.6,0" VerticalAlignment="Top" FontSize="24"/>
        <Image x:Name="ErrorIconImage" HorizontalAlignment="Right" Height="50" Margin="0,10,9.6,0" VerticalAlignment="Top" Width="50"/>

    </Grid>
</Window>
