<Window x:Class="NDS_BNCL_Editor.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NDS_BNCL_Editor"
        mc:Ignorable="d"
        Title="Settings" Height="125" Width="350" ResizeMode="CanMinimize">
    <Grid>
        <Button Content="Credits" HorizontalAlignment="Left" Height="35" Margin="264,10,0,0" VerticalAlignment="Top" Width="70" Click="Credits_Click"/>
        <Button Content="Update SizePresets.xml" HorizontalAlignment="Left" Height="35" Margin="10,10,0,0" VerticalAlignment="Top" Width="170" Click="UpdateSizePresets_Click"/>
        <Button Content="Choose size preset for BNCL" HorizontalAlignment="Left" Height="35" Margin="10,50,0,0" VerticalAlignment="Top" Width="170" Click="ChooseSizePreset_Click"/>

    </Grid>
</Window>
